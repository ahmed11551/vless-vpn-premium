# Telegram Bot Configuration

# Bot Token (получите у @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# API Configuration
API_BASE_URL=http://localhost:3001/api

# Admin Configuration
ADMIN_ID=your_telegram_id_here

# Bot Settings
BOT_NAME=VLESS VPN Premium Bot
BOT_USERNAME=vless_vpn_shop_bot
BOT_DESCRIPTION=Premium VLESS VPN Service Bot

# Support Configuration
SUPPORT_CHAT=@vless_support
SUPPORT_EMAIL=support@vless-vpn.org

# Website
WEBSITE_URL=https://vless-vpn-premium.netlify.app

# Payment Configuration
PAYMENT_PROVIDER=yookassa
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key

# Database Configuration (если используется отдельная БД для бота)
BOT_DB_URL=sqlite:./bot.db

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/bot.log

# Security
WEBHOOK_SECRET=your_webhook_secret

# Features
ENABLE_PAYMENTS=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
